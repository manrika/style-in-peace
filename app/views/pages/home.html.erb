<div class='container'>
  <h2>How eco-friendly are the brands you shop with?</h2>

<%= render 'search' %>

  <div>
    <h2>New eco-brands on the block</h2>
    <div class='d-flex flex-wrap justify-content-center'>
      <% @new_brands.first(10).each do |brand| %>
        <%= render 'brands/simple_card', brand: brand %>
      <% end %>
  </div>

  <% if current_user %>
    <div>
      <h2>Eco-brands for you</h2>
      <% if @recommended_brands.empty? %>
        <p>Sorry, we don't have any brands that match your criteria.</p>
      <% else %>
        <div class="d-flex flex-wrap justify-content-center">
          <% @recommended_brands.first(10).each do |brand| %>
            <div style="width: 300px; height: auto;">
              <%= render 'brands/info_card', brand: brand  %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>






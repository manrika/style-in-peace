<%= form_tag(
    explore_brands_path, method: 'get',
    class: "form-inline col-12",
    data: {search_news_target: "form"},
    autocomplete: "off"
  ) do %>
  <div class="search-bar" id="outlined-search" data-search-news-target="search">
    <i class="fas fa-search d-inline"></i>
    <%= text_field_tag :news_query,
      params[:news_query],
      class: "d-inline search-input",
      placeholder: "Search news",
      data: {
        action: "keyup->search-news#updateNews",
        search_news_target: "input"
      }
    %>
  </div>
<% end %>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel('cycle')">
  <div class="carousel-inner">
    <div class="carousel-item active background-img" style="background-image: linear-gradient( rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.2) ), url('<%= image_path 'naughty1.png' %>')">
    </div>
      <div class="carousel-item background-img" style="background-image: linear-gradient( rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.2) ), url('<%= image_path 'naughty2.png' %>')">
      </div>
      <div class="carousel-item background-img" style="background-image: linear-gradient( rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.2) ), url('<%= image_path 'naughty3.png' %>')">
      </div>
  </div>
 <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>

<div id=<%= "carousel#{brand.id}Controls" %> class="carousel slide" data-ride="carousel('cycle')">
  <div class="carousel-inner">
    <div class="carousel-item active background-img" style="background-image: url('<%= brand.splash_image %>')" data-interval="3000">
    </div>
    <% brand.photos.each do |photo| %>
      <div class="carousel-item background-img" style="background-image: url('<%= cl_image_path photo.key, crop: :fill, width: 200, height: 200 %>')" data-interval="3000">
      </div>
    <% end %>
  </div>
 <button class="carousel-control-prev" type="button" data-target=<%= "#carousel#{brand.id}Controls" %> data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target=<%= "#carousel#{brand.id}Controls" %> data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>

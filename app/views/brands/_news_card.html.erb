<div class="info-card">
<%= image_tag news.image, class: "card-img-top"  %>

  <%# line for name and btns %>
  <div class="p-3">
    <div class="d-flex">
      <%# brand name %>
      <div class="mr-auto max">
        <p><strong><%= truncate(news.title, length: 30, separator: ' ') %></strong></p>
        <p><%= truncate(news.blurb, length: 100, separator: ' ')%></p>
        <p class= "more"><%= link_to "More", news.url%></p>
        <p class= "date"><%= news.date  %></p>
      </div>
      <%# visit page btn %>
    </div>
  </div>
</div>
